<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vi.learning.hellokotlin">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.ankofeature.AnkoFeatureActivity" />
        <activity android:name=".view.ankofeature.DescriptionActivity" />
        <activity
            android:name=".view.footballclub.FootballclubFromApiActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.footballmatch.FootballMatchScheduleActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.footballmatch.detail.FootballMatchDetailActivity" />
        <activity android:name=".view.footballclub.detail.TeamDetailActivity" />
        <activity android:name=".view.search.SearchMatchActivity"
            android:label="@string/title_search_match" />
        <activity
            android:name=".view.footballclub.detail.TeamDetailClubActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.footballclub.detail.PlayerDetailActivity" />
        <activity android:name=".view.search.SearchTeamActivity"
            android:label="@string/title_search_team"/>
    </application>

</manifest>